{
    "version": "2.0.0",
    "tasks": [
        {
            // Build the entire solution
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Reactivities/React19&&Mobx.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            // Rebuild the solution (clean + build)
            "label": "rebuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Reactivities/React19&&Mobx.sln",
                "--no-incremental",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            // Clean build artifacts
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Reactivities/React19&&Mobx.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            // Watch and hot reload the API project
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Reactivities/API/API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            // Publish the API for deployment
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Reactivities/API/API.csproj",
                "-c",
                "Release",
                "-o",
                "${workspaceFolder}/publish",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            // Restore NuGet packages
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/Reactivities/React19&&Mobx.sln"
            ],
            "problemMatcher": []
        },
        {
            // Run EF migrations
            "label": "ef-migrations",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}",
                "--project",
                "${workspaceFolder}/Reactivities/Persistence/Persistence.csproj",
                "--startup-project",
                "${workspaceFolder}/Reactivities/API/API.csproj"
            ],
            "problemMatcher": []
        },
        {
            // Update database with latest migrations
            "label": "ef-database-update",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/Reactivities/Persistence/Persistence.csproj",
                "--startup-project",
                "${workspaceFolder}/Reactivities/API/API.csproj"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "type": "promptString",
            "description": "Enter migration name:",
            "default": "NewMigration"
        }
    ]
}