{
  // C# Language Server (OmniSharp) Settings
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.organizeImportsOnFormat": true,
  "omnisharp.useModernNet": true,
  "omnisharp.path": "latest",

  // Explicitly point to the main solution file
  "omnisharp.defaultLaunchSolution": "Reactivities/React19&&Mobx.sln",

  // C# code settings
  "csharp.semanticHighlighting.enabled": true,
  "csharp.format.enable": true,

  // TypeScript/JavaScript settings for client folder
  "typescript.tsdk": "client/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // ESLint settings
  "eslint.enable": true,
  "eslint.workingDirectories": ["client"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Editor settings for better IntelliSense
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Default formatters for different languages
  "[csharp]": {
    "editor.defaultFormatter": "anysphere.csharp",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // File associations
  "files.associations": {
    "*.cs": "csharp"
  },

  // Exclude folders from file watcher to improve performance
  "files.watcherExclude": {
    "**/bin": true,
    "**/obj": true,
    "**/node_modules": true,
    "**/.git": true
  },

  // Exclude from search
  "search.exclude": {
    "**/node_modules": true,
    "**/bin": true,
    "**/obj": true
  },
  "dotnet.defaultSolution": "Reactivities/React19&&Mobx.sln",
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "dotnet.formatting.organizeImportsOnFormat": true
}
